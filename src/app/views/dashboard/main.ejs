<%# variables %>
<% 
var wallet = user.items.wallet.toLocaleString('fa-ir');
var days_left = user.items.digiplus.days_left.toLocaleString('fa-ir');
var points = user.items.points.toLocaleString('fa-ir');
var commentLength = commentLength.toLocaleString('fa-ir')
